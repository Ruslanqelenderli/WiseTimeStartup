@{
    Layout = "_Layout";
}
@model WiseTime.UI.Areas.Admin.ViewModels.CategoryViewModels.CategoryEditViewModel

@if (ViewBag.Updated != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Updated

    </div>
    ViewBag.Updated = null;
}
else if (ViewBag.UpdatedError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.UpdatedError

    </div>
    ViewBag.UpdatedError = null;
}

<div class="wrapper wrapper-content  animated fadeInRight blog">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5><small> Kateqoriyaya dəyişiklik et.</small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-action="Edit" asp-controller="Category" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!--====== Title input =======-->
                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">Kateqoriya Adı</label>
                                <input asp-for="Name" type="text" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!--====== Text input =======-->
                        <div class="hr-line-dashed"></div>
                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">Kateqoriya Məzmunu</label>
                                <textarea asp-for="Description" class="form-control" cols="30" rows="6"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>




                        <!--====== Checkboxes and radios input =======-->
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row align-items-baseline">
                            <label class="col-sm-2 col-form-label">Post Status</label>
                            <div class="col-sm-3">
                                <div>
                                    <label class="mg-bott"> <input asp-for="Status" type="checkbox">Aktivdir</label>
                                    <br />
                                    <span class="text-success">Bu düymə bu kateqoriyanın saytda göstərilməsini təmin edir.</span>
                                </div>
                            </div>
                        </div>


                        <!--====== Save and Cancel =======-->
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary btn-sm" type="submit">Yadda saxla</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>