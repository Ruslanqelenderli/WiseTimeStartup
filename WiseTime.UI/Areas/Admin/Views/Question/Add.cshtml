@{
    Layout = "_Layout";
}
@model WiseTime.UI.Areas.Admin.ViewModels.QuestionViewModels.QuestionImageAddViewModel

@if (TempData["Added"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Added"]

    </div>
    TempData["Added"] = null;
}

else if (TempData["AddedError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["AddedError"]

    </div>
    TempData["AddedError"] = null;
}

else if (TempData["Deleted"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Deleted"]

    </div>
    TempData["Deleted"] = null;
}
else if (TempData["DeletedError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["DeletedError"]

    </div>
    TempData["DeletedError"] = null;
}



<div class="wrapper wrapper-content  animated fadeInRight blog">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5><small>@ViewBag.ExamTypeName üçün sual əlavə et.</small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-action="Add" asp-controller="Question" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="ExamTypeId" type="hidden" value="@ViewData["ExamTypeId"]" class=" form-control">
                        <!--====== Title input =======-->
                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">Sual</label>
                                <input asp-for="Title" type="text" class="form-control">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">A variantı</label>
                                <input asp-for="OptionA" type="text" class="form-control">
                                <span asp-validation-for="OptionA" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">B variantı</label>
                                <input asp-for="OptionB" type="text" class="form-control">
                                <span asp-validation-for="OptionB" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">C variantı</label>
                                <input asp-for="OptionC" type="text" class="form-control">
                                <span asp-validation-for="OptionC" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">D variantı</label>
                                <input asp-for="OptionD" type="text" class="form-control">
                                <span asp-validation-for="OptionD" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">E variantı</label>
                                <input asp-for="OptionE" type="text" class="form-control">
                                <span asp-validation-for="OptionE" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">Düzgün cavab</label>
                                <select asp-for="CorrectOption" name="CorrectOption" class="form-control">
                                    <option value="A">A</option>
                                    <option value="B">B</option>
                                    <option value="C">C</option>
                                    <option value="D">D</option>
                                    <option value="E">E</option>
                                </select>
                                <span asp-validation-for="CorrectOption" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group  row">
                            <div class="col-sm-12">
                                <label class="col-form-label">Sualın balı</label>
                                <input asp-for="Point" type="number" class="form-control">
                                <span asp-validation-for="Point" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="hr-line-dashed"></div>
                        <div class="custom-file">
                            <label class="mg-bott">Sualın Şəkli</label>
                            <input asp-for="Image" type="file" id="Image" accept="image/*" class="form-control my-2">
                            <span asp-validation-for="Image" class="text-danger"></span>

                        </div>
                        <!--====== Text input =======-->
                        <!--====== Checkboxes and radios input =======-->
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row align-items-baseline">
                            <label class="col-sm-2 col-form-label">Sualın Statusu</label>
                            <div class="col-sm-3">
                                <div>
                                    <label class="mg-bott"> <input asp-for="Status" type="checkbox">Aktivdir</label>
                                    <br />
                                    <span class="text-success">Bu düymə bu sualın saytda göstərilməsini təmin edir.</span>
                                </div>
                            </div>
                        </div>


                        <!--====== Save and Cancel =======-->
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary btn-sm" type="submit">Yadda saxla</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>İmtahanlar</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="footable table table-stripped toggle-arrow-tiny">
                        <thead>
                            <tr>
                                <th data-toggle="true">Sual</th>
                                <th>Status</th>
                                <th>Əməliyyatlar</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in ViewBag.Questions)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Status</td>


                                    <td class="d-flex justify-content-between">
                                        <a href="/Admin/Question/Remove/@item.Id" onclick="return confirm('.Silmək istəyirsiniz?');" class="mr-3">
                                            <i class="fa fa-times"></i>
                                        </a>
                                        <a href="/Admin/Question/Edit/@item.Id" class="mr-3">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                       


                                    </td>

                                </tr>
                            }



                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>