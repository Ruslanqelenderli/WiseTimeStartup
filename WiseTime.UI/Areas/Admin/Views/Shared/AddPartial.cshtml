<div class="blog-form">
    <div class="row">
        <div class="col-12">
            <h3 style="margin-bottom: 2rem;">Şərhinizi əlavə edin</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="AddPartial" asp-controller="Comment" class="contact-form">
                <div class="row ">
                    <div class="col-6">

                    </div>
                    <div class="col-6">

                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <textarea id="txtcontent" name="Content" cols="30" rows="8" placeholder="Şərh"
                                  class="textarea"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-start">
                        <div class="bttn-row " style="margin-top:20px;">
                            <input type="submit" id="btn" class="bttn" value="Şərh əlavə et" />

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#btn').click(function () {
        let values = {
            Content: $("#txtcontent").val()
        };
        $.ajax({
            type: "post",
            url: "/Admin/Comment/AddPartial",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        })
    })
</script>
